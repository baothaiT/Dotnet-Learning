    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>a9dd734f-e1dd-4835-9d99-afe32d846117</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
